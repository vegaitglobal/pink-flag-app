{
  "name": "PinkFlagApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean:android": "rimraf android/app/build",
    "run:android-build-dev": "react-native run-android --no-packager",
    "android": "npm-run-all -s clean:android run:android-build-dev start",
    "ios": "react-native run-ios",
    "start": "rimraf ./node_modules/.cache/babel-loader && react-native start --reset-cache",
    "build": "yarn; cd ios; pod install; cd ..",
    "test": "jest",
    "dependency:check": "madge --circular --extensions ts,js,tsx ./",
    "type:check": "tsc",
    "code:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "code:format": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "18.1.0",
    "react-native": "0.70.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.4",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^26.6.3",
    "lint-staged": "^13.0.3",
    "madge": "^5.0.1",
    "metro-react-native-babel-preset": "0.72.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.8.3",
    "husky": "^8.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
